using namespace std;
int i, j, n, d, c;

int comp(const void* a, const void* b)
{
	const int* x = (int*)a;
	const int* y = (int*)b;
	if (*x > *y) return 1;
	else if (*x < *y) return -1;
	return 0;
}

int shell(int A[], int n)
{
	d = n;
	d = d / 2;
	while (d > 0)
	{
		for (i = 0; i < n - d; i++)
		{
			j = i;
			while (j >= 0 && A[j] > A[j + d])
			{
				c = A[j];
				A[j] = A[j + d];
				A[j + d] = c;
				j--;
			}
		}
		d = d / 2;
	}
	cout << "Итоговый массив после сортировки Шелла: ";
	for (i = 0; i < n; i++) cout << A[i] << " "; cout << endl << endl; //вывод массива
	return 0;
}

